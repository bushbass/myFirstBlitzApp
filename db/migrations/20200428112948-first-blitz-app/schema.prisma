model Project {
  id    Int    @default(autoincrement()) @id
  name  String
  tasks Task[]
}

model Task {
  id        Int     @default(autoincrement()) @id
  name      String
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}